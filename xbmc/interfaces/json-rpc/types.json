      "votes": { "type": "string" },
      "rating": { "type": "number" },
      "writer": { "type": "string" },
      "firstaired": { "type": "string" },
      "productioncode": { "type": "string" },
      "season": { "type": "integer" },
      "episode": { "type": "integer" },
      "originaltitle": { "type": "string" },
      "showtitle": { "type": "string" },
      "cast": { "$ref": "Video.Cast" },
      "tvshowid": { "$ref": "Library.Id" }
    }
  },
  "Video.Details.MusicVideo": {
    "extends": "Video.Details.File",
    "properties": {
      "musicvideoid": { "$ref": "Library.Id", "required": true },
      "studio": { "type": "string" },
      "year": { "type": "integer" },
      "album": { "type": "string" },
      "artist": { "type": "string" },
      "genre": { "type": "string" },
      "track": { "type": "integer" }
    }
  },
  "Files.Media": {
    "type": "string",
    "enum": [ "video", "music", "pictures", "files", "programs" ]
  },
  "List.Amount": {
    "type": "integer",
    "default": -1,
    "minimum": 0
  },
  "List.Limits": {
    "type": "object",
    "properties": {
      "start": { "type": "integer", "minimum": 0, "default": 0 },
      "end": { "type": "integer", "minimum": 0, "default": -1, "description": "The number of items in the list being returned" }
    },
    "additionalProperties": false
  },
  "List.Sort": {
    "type": "object",
    "properties": {
      "method": { "type": "string", "default": "none",
        "enum": [ "none", "label", "date", "size", "file", "drivetype", "track", "duration", "title", "artist",
                  "album", "genre", "year", "videorating", "programcount", "playlist", "episode", "videotitle",
